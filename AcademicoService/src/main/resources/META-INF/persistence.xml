<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="academicoPU" transaction-type="JTA">
        <jta-data-source>jdbc/academico</jta-data-source>
        <class>edu.jlmallas.academico.entity.Area</class>
        <class>edu.jlmallas.academico.entity.Carrera</class>
        <class>edu.jlmallas.academico.entity.Coordinador</class>
        <class>edu.jlmallas.academico.entity.CoordinadorPeriodo</class>
        <class>edu.jlmallas.academico.entity.Docente</class>
        <class>edu.jlmallas.academico.entity.DocenteCarrera</class>
        <class>edu.jlmallas.academico.entity.EstadoEstudianteCarrera</class>
        <class>edu.jlmallas.academico.entity.EstadoLaboral</class>
        <class>edu.jlmallas.academico.entity.EstadoMatricula</class>
        <class>edu.jlmallas.academico.entity.Estudiante</class>
        <class>edu.jlmallas.academico.entity.EstudianteCarrera</class>
        <class>edu.jlmallas.academico.entity.Nivel</class>
        <class>edu.jlmallas.academico.entity.OfertaAcademica</class>
        <class>edu.jlmallas.academico.entity.PeriodoAcademico</class>
        <class>edu.jlmallas.academico.entity.PeriodoCoordinacion</class>
        <class>edu.jlmallas.academico.entity.ReporteMatricula</class>
        <class>edu.jlmallas.academico.entity.TipoContrato</class>
        <class>edu.jlmallas.academico.entity.Titulo</class>
        <class>edu.jlmallas.academico.entity.TituloDocente</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
        </properties>
    </persistence-unit>
</persistence>
